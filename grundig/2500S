# Brand:             Grundig
# Model:             2500S
# Supported devices: Digital Satellite Receiver
# Created by:        Tommie Gannert <d00-tga@d.kth.se>
#
# NOTES
# * I'm not sure about the model. It is hidden somewhere, possibly on the back
#   of the box. Anyway, it's the only decoder I've found on www.grundig.se.
#


begin remote
  name         2500S
  bits         13
  flags        RC5|CONST_LENGTH
  eps          30
  aeps         100

  one          863   904
  zero         863   904
  plead        855
  gap          113122
  toggle_bit   2

      begin codes
          KEY_1                    0x0000000000001281        #  Was: 1
          KEY_2                    0x0000000000001282        #  Was: 2
          KEY_3                    0x0000000000001283        #  Was: 3
          KEY_4                    0x0000000000001284        #  Was: 4
          KEY_5                    0x0000000000001285        #  Was: 5
          KEY_6                    0x0000000000001286        #  Was: 6
          KEY_7                    0x0000000000001287        #  Was: 7
          KEY_8                    0x0000000000001288        #  Was: 8
          KEY_9                    0x0000000000001289        #  Was: 9
          KEY_0                    0x0000000000001280        #  Was: 0
          KEY_SLEEP                0x000000000000128C        #  Was: Standby
          KEY_INFO                 0x000000000000128F        #  Was: Info
	  TV/Sat                   0x00000000000012A8
          KEY_KPPLUS               0x00000000000012AF        #  Was: Plus
          KEY_MUTE                 0x0000000000000286        #  Was: Mute
          KEY_INFO                 0x000000000000028F        #  Was: Guide
          KEY_UP                   0x0000000000000290        #  Was: Up
          KEY_DOWN                 0x0000000000000291        #  Was: Down
	  Serv                     0x0000000000000292
          KEY_EXIT                 0x0000000000000293        #  Was: Exit
          KEY_LEFT                 0x0000000000000295        #  Was: Left
          KEY_RIGHT                0x0000000000000296        #  Was: Right
          KEY_OK                   0x0000000000000297        #  Was: OK
          Prefer                   0x00000000000002A1
	  Perso                    0x00000000000002AA
          KEY_A                    0x00000000000002AB        #  Was: A
          KEY_B                    0x00000000000002AC        #  Was: B
          KEY_C                    0x00000000000002AD        #  Was: C
          KEY_D                    0x00000000000002AE        #  Was: D
          KEY_E                    0x00000000000002AF        #  Was: E
      end codes
end remote

